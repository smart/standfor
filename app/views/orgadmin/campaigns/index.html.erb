<h1>Listing campaigns</h1>

<h1><%= @organization.name -%></h1>

<table border=1>
  <tr>
   <th>Name</th>
   <th>Description</th>
   <th>Goal</th>
   <th>Segment Name</th>
   <th>End Date</th>
   <th>Actions</th>
  </tr>

<% for campaign in @campaigns %>
  <tr>
    <td><%= campaign.name %></td>
    <td><%= campaign.description %></td>
    <td><%= campaign.goal %></td>
    <td><%= campaign.segment.name %></td>
    <td><%= campaign.end_date %></td>
    <td><%= link_to 'Show', orgadmin_organization_campaign_path(@organization, campaign) %>
    <%= link_to 'Edit', edit_orgadmin_organization_campaign_path(@organization, campaign) %>
    <%= link_to 'Destroy', orgadmin_organization_campaign_path(@organization, campaign ), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New campaign', new_orgadmin_organization_campaign_path(@organization) %>
