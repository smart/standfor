<% content_box ("how will you pay?", :id => "payment", :class => "shadow" ) do %>

<% form_for :authorization, :url => url_for(:action => "payment" ) , :method => :post, :html => { :id => 'authorization-form' } do |f| %>
   <fieldset class="input">
    <legend>Credit Card Details</legend>
     <dl>
      <dt><label for="creditcard_first_name">First Name:</label></dt>
       <dd><%= f.text_field :first_name , :size => 20 -%></dd>
      
      <dt><label for="creditcard_last_name">Last Name:</label></dt>
       <dd><%= f.text_field :last_name, :size => 20 -%></dd>

      <dt><label for="creditcard_type">Card Type:</label></dt>
       <dd><%= f.select :card_type, ["Visa", "Master Card", "Discover"] %></dd>
      
      <dt><label for="creditcard_number">Card Number:</label></dt>
       <dd><%= f.text_field :number -%></dd>
   </dl>
   <dl class="expiration">   
      <dt><label for="creditcard_expiration_month_year">Expiration:</label></dt>
       <dd><%= select_month(Date.today)%><%= select_year(Date.today)%></dd>
   	</dl>
    <dl class="verification">  
      <dt><label for="creditcard_verification_value">Verification:</label></dt>
       <dd><%= f.text_field :verification_value, :size => 6 -%></dd>
     </dl>
   </fieldset>

<% if false %>
    <%= button(:image => "/text/button_text/donate!.png", :alt => "Donate!", 
	:link =>  url_for(:controller => 'authorizations', :action => 'create' ),
	:class => "large-button" ) -%>
<% end %>

<%= button(:image => "/text/button_text/donate!.png", :alt => "Donate!", 
	:class => "large-button", :form_id => "authorization-form", :type => 'submit' ) -%>

<% end %>

<% end %>

<% content_box("Donation Summary", :id => "summary", :class => "basic") do -%>
 <ul>
 <li>Amount:</li>
 <li>Donation Type:</li>
 <li>Privacy Settings:</li>
 <li>Segment:</li>
 <li>Dedication:</li>
 </ul>
 <%= button(:image => "/text/button_text/modify.png", :alt => "Modify Donation", :link => @return_to, :class => "large-button") -%>
<% end %>
