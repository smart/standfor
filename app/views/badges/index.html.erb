<% content_box("filter badges", :class => 'basic', :id => 'filter') do -%>
	<%= form_remote_tag :url => { :controller => 'badges', :action => 'search' } %>
	<dl>
		<dt><label for="search_term">keyword</label></dt>
			<dd><%=  text_field  'search' , 'term', :size => 20 -%></dd>
		<dt><label for="search_organization">organization</label></dt>
			<dd><%= select 'search', 'organization', Organization.find(:all, :order => 'name').collect {|o| [o.name, o.id] },{:include_blank => true }  %></dd>
		<dt><label for="search_segment">cause</label></dt>
			<dd><%= select 'search', 'segment', Segment.find(:all, :order => 'name').collect {|s| [s.name, s.id] }, {:include_blank => true}  %></dd>
	</dl><%= submit_tag 'search' %>
	</form >
<% end -%>

<% grey_fade(:id => "badges" ) do -%>
	<h1><%= image_tag("/text/basicborder_header/most recent badges.png", :alt => "My Badges") %></h1>
   <div id="badge-list">
		<% @badges.each do |badge| %>
			<%= badge_link(badge, badge_path(badge)) -%>
		<% end %>
  </div>
<% end %>
