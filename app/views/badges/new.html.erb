<h1>New badge</h1>

<%= error_messages_for :badge %>

<% form_for(:badge, :url => organization_segment_badges_path(@organization, @segment ), :method => :post)  do |f| %>
  <%= render :partial => 'fields', :locals => {:f => f } %>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', organization_segment_badges_path(@organization, @segment) %>
