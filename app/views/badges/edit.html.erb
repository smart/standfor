<h1>Editing badge</h1>

<%= error_messages_for :badge %>

<% form_for(@badge) do |f| %>

  <p><lable for="badge_name" >Name:</label>
   <%= f.text_field :name -%>
  </p>

  <p><lable for="badge_organization" >Organization:</label>
    <%= f.select( "organization_id", Organization.find(:all).collect {|o| [ o.name, o.id ] }, 
		{ :include_blank => true }) -%>
  </p>

  <p><lable for="badge_structure_id" >Structure ID:</label>
   <%= f.text_field :structure_id-%>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @badge %> |
<%= link_to 'Back', badges_path %>
