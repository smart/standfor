<h1>Listing donations</h1>

<table>
  <tr>
   <th>Organization</th>
   <th>Segment</th>
   <th>Amount</th>
   <th>Actions</th>
  </tr>

<% for donation in @donations %>
  <tr>
    <td><%= donation.organization.name %> </td>
    <td><%= donation.segment.name %> </td>
    <td><%= donation.amount %> </td>
    <td><%= link_to 'Show', organization_segment_donation_path(donation.organization, donation.segment, donation )  %></td>
    <td><%= link_to 'Edit', edit_organization_segment_donation_path(donation.organization, donation.segment, donation) %></td>
    <td><%= link_to 'Destroy', organization_segment_donation_path(@organization, @segment, donation), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New donation', new_organization_segment_donation_path %>

