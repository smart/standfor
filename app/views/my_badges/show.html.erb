<div id="preview">
<% content_box( "your badge", :class => "shadow" ) do -%>

    <div id="badge">
    	<%= @badge.name -%>
      <%= render :partial => "shared/current_view", :locals => {:my_badge => @my_badge } -%>
    </div>

    <div>
       <%= link_to 'customize', :controller => 'customize', :action => 'index', :id => @my_badge  -%>
       <%= link_to 'share', :controller => 'share', :action => 'index', :id => @my_badge -%>
    </div>

<% end %>
</div
<div id="howto">
<% content_box( "statistics", :class => "basic") do -%>
  <table>
   <tr>
     <th>Name</th>
     <th>Hits</th>
     <th>Unique Hits</th>
   </tr>
  <% @statistics.each do |statistic| -%>
   <tr>
    <td><%= statistic.attributes['name'] -%></td>
    <td><%= statistic.attributes['stat_summary'].total_hits -%></td> 
    <td><%= statistic.attributes['stat_summary'].total_uniques -%></td> 
   </tr>
  <% end -%>
 </table>
<% end -%>
</div>

