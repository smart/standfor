<h1>New account</h1>

<%= link_to 'I already have an acount, log me in' , :controller => 'site', :action => 'login' -%>

<%= error_messages_for :account %>

<% form_for(@account) do |f| %>

  <p><lable for="account_first_name" >First Name:</label>
   <%= f.text_field :first_name -%>
  </p>

  <p><lable for="account_last_name" >Last Name:</label>
   <%= f.text_field :last_name -%>
  </p>

  <p><lable for="account_phone" >Phone:</label>
   <%= f.text_field :phone -%>
  </p>

  <p><lable for="account_email" >Email:</label>
   <%= f.text_field :email -%>
  </p>

  <p><lable for="account_address_1" >Address 1:</label>
   <%= f.text_field :address_1 -%>
  </p>

  <p><lable for="account_address_2" >Address 2:</label>
   <%= f.text_field :address_2 -%>
  </p>

  <p><lable for="account_city" >City:</label>
   <%= f.text_field :city -%>
  </p>

  <p><lable for="account_state" >State:</label>
    <%= select 'account', 'state', select_state_for_account -%>
  </p>

  <p><lable for="account_zip" >Zip:</label>
   <%= f.text_field :zip-%>
  </p>

  <p><lable for="account_country" >Country:</label>
   <%= f.country_select :country, ['United States', 'Canada' ] -%>
  </p>


  <p>
    <%= f.submit "Update" %>
  </p>


<% end %>

<%= link_to 'Back', accounts_path %>
