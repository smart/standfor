<% content_box('settings', :class => 'shadow', :id => 'preview') do -%>

<%= error_messages_for :user %>
<% form_for :account, current_account, { :url => {:action => :save_registration}, :html => {:method => :put, :id => "settings-form" } } do |f| -%>
	<fieldset class="input">
		<dl>
			<dt><label for="nickname">Nickname:</label></dt>
				<dd><%= f.text_field :nickname %></dd>
		</dl>
		<dl>
			<dt><label for="fullname">Fullname:</label></dt>
				<dd><%= f.text_field :fullname %></dd>
		</dl>
		<dl>
			<dt><label for="email">Primary Email:</label></dt>
				<dd><%= f.text_field :primary_email %></dd>
			
		</dl>
	</fieldset>
	<%= submit_tag 'save settings' %>

<% end -%>

<span class="clear"><span>
<% end -%>
<% content_box('we need more details', :class => 'basicborder', :id => 'instructions') do  %>
	<p>
		We have pulled your information from [authentication source]. However, standfor:us requires a few more details before we can create your account. Please enter the required fields in the form to the left to continue.
	</p>
<% end %>