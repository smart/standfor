<h1>Login/Register</h1>

<% form_tag worldreach_sessions_path do -%>
<div id="login">
	<dl>
		<dt><label for="login">Username:</label></dt>
			<dd><%= text_field_tag 'login' %></dd>
		<dt><label for="password">Password:</label></dt>
			<dd><%= password_field_tag 'password' %></dd>
		<dt><label for="remember_me">Remember me:</label></dt>
			<dd><%= check_box_tag 'remember_me' %></dd>
			<dd><%= submit_tag 'Log in' %></dd>
	</dl>
</div>
<% end -%>

