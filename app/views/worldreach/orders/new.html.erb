<h1>Donation</h1>

<div id="padding">
	<% if flash[:notice] %>
	<div id="notice">
	  <%= flash[:notice] -%>
	</div>
	<% end %>
	
	<%= error_messages_for :order %>
	
	<%= render :partial => 'total',  :locals => {:order => @order } -%>
	
	<div id="segment-form">
	  <%= render :partial => 'segment_form', :locals => {:organization => @organization, :order => @order  } -%>
	</div>
	
	<%= link_to 'Back to Causes', worldreach_segments_path %>	
</div>

<% content_for :sidebar do %>
	<ul id="position">
    <li class="check icon">&nbsp;</li>
    <li class="dollar icon">&nbsp;</li>
    <li class="person-off icon">&nbsp;</li>
	</ul>
	<span>Enter donation amount and divide among causes</span>
	<div id='causes_panel'>
		<%= link_to 'Back to Our Causes Overview', worldreach_segments_path -%>
		<%= render :partial => 'worldreach/shared/causes', :locals => { :segment => @organization.segments, :current_segment => '' } %>
	</div>
	<div class="navi-button">
		<%= button(:image => 'worldreach/personal_information.png', :alt => 'Submit Donation', :form_id => 'donation-form', :type => 'submit') %>
	</div>
<% end %>
