<h2>Choose Which way to share it!</h2>

<ul> 
<% @shares.each do |share| %>
<li>
  <% if share.attributes['share_method'] ==  'Form' %>
     <%= link_to_remote( image_tag(share.icon_path, :alt => share.name), :url => {:controller => 'share', :action => 'choose', :my_badge_id => my_badge, :share  => share.id  } ) %>
  <% elsif share.attributes['share_method'] ==  'Popup' %>
     <%= link_to( image_tag(share.icon_path, :alt => share.name), {:controller => 'share', :action => 'instructions', :my_badge_id => my_badge, :share  => share.id  }, :popup => ['email-instructions', 'height=600,width=600,scrollbars=1'] ) %>
  <% else %>  
    <p>urecognized share method</p>
  <% end  %>  
</li>
<% end %>
