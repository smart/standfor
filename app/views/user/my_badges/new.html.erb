<% content_box("get this badge", :id => "preview", :class => "shadow" ) do %>
<%= error_messages_for :my_badge %>
	<div id="badge">
		<p><%= @my_badge.badge.name  -%> </p>
    <p><img src="<%=ADISERVER-%>/adis/<%= @my_badge.adi_id -%>.gif?&draft=true&rand=<%=rand(100).to_s-%>" ></p>
		<p><%= @my_badge.badge.description -%></p>
	  <p><%= button(:image => "/text/button_text/customize.png", :alt => "Donate!", :link => '/customize' , :class => "large-button" ) -%></p>
	</div>
	<span class="clear"></span>
<% end %>

<% if @my_badge.available?(current_account)  %>
	<% content_box("Get This Badge", :id => "instructions", :class => "basicborder") do %>
	<p>You have met all the requirements for this badge!</p>
  <p><% form_for :my_badge, :url => my_badge_create_path , :method => :post, :html => {:id => 'tocustomize-form' }  do |f| %>
  <%= f.submit 'save this to my account' -%>
   <% end %>
   <% end %>
  </p>
<% else  %>
 		<% content_box("Get This Badge", :id => "instructions", :class => "basicborder") do %>
		<p>You have not met all the requirements for this badge!  You need to complete one of the following requiremetns to get this badge: <br />
       <%= render :partial => 'requirements', :locals => {:my_badge => @my_badge } -%>
    </p>
    <p>Please complete below.</p>
	 	<% end %>
<% end %> <!-- end  else -->
<span class="clear"></span>

<% if @my_badge.available?(current_account)  %>
   available
<% else %>
<% grey_fade(:id => "complete-requirements") do %>

       <% form_for :my_badge, :url => my_badge_create_path , :method => :post  do |f| %>
    	    <label for>If you have an access code you can enter it below:</label><br />
	    	  <%= f.text_field :access_code, :size => 6 %>
    		  <%= submit_tag "Enter Code" %>
<%if false %>
					<%= button(:image => "/text/button_text/enter code!.png", :alt => "Enter Access Code!", :link => my_badge_create_path , :class => "large-button" ) -%>
<% end %>
		     <% end %>
	    	<span class="clear"></span>
			<%= image_tag ( "labels/or.png", :alt => "or", :class => "or" ) %><br />

			<% form_for :order, :url => organization_segment_order_path(@my_badge.badge.organization, @my_badge.badge.segment , @order), :method => :post  do |f| %>
	      <label>Enter donation amount:</label> 
	      <%= f.text_field :amount, :size => 6 -%> 
	      <%= f.submit  'donate!'  -%> 
<%if false %>
					<%= button(:image => "/text/button_text/donate!.png", :alt => "Donate!", :link => organization_segment_order_path(@my_badge.badge.organization, @my_badge.badge.segment , @order  ), :class => "large-button" ) -%>
<% end %>

		  <% end %>

<% end  %>
<span class="clear"></span>
<% end  %>
