<% grey_fade(:id => "badges" ) do -%>
	<h1>my badges</h1>
  <div id="my-badge-list">
	<% if @my_badges.empty? %>
		<p>You haven't created any badges yet. Please <%= link_to 'create a badge', badges_path %> first.</p>
	<% else %>
		<% current_account.my_badges.each do |my_badge| %>
	 		<%= badge_link(my_badge, :size => 'small' ) -%>
		<% end %>
	<% end %>
</div>
<% end %>
