<h1>Giving Segments</h1>



<% @segments.each do |segment| %>
  <div class="oi1">
  <% content_box(link_to segment.name, segment) do -%>
      <% content_box ("test", :class => "interior" ) do -%>
      <p>This page should consolidate with the respective show page for each segment</p>
      <% end %>
    <div class="badges">
      <h2>You can show your support with these customizable badges</h2>
        <%= image_tag ( "placeholders/awareness.jpg", :alt => "Awareness" ) %>
        <%= image_tag ( "placeholders/donation.jpg", :alt => "Make a donation" ) %>
        <%= image_tag ( "placeholders/life.jpg", :alt => "Cut for Life" ) %>
        <%= image_tag ( "placeholders/volunteer.jpg", :alt => "Volunteer" ) %>
    </div>
  <% end %>
  </div>
<% end  %>


<% if false %>
<table>
  <tr>
  </tr>
<% for segment in @segments %>
  <tr>
    <td><%= link_to 'Show', segment %></td>
    <td><%= link_to 'Edit', edit_segment_path(segment) %></td>
    <td><%= link_to 'Destroy', segment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New segment', new_segment_path %>
<% end %>