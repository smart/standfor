/* box styles */

.box {
  position:relative;
  margin:0px auto;
  min-width:8em;
  max-width:760px; /* based on image dimensions - not quite consistent with drip styles yet */
  z-index:1;
  margin-left:15px; /* default, width of left corner */
  margin-bottom:15px; /* spacing under dialog */
}

.default .content,
.default .t,
.default .b,
.default .b div {
  background:transparent url(<%= style_image_path("solid_smooth_dark_head") || "/images/boxes/solid-smooth-darkhead.png" -%>) no-repeat top right;
}

.shadow .content,
.shadow .t,
.shadow .b,
.shadow .b div {
  background:transparent url(<%= style_image_path("solid_shadow_dark_head") || "/images/boxes/solid-shadow-darkhead.png" -%>) no-repeat top right;
}


.basic .content,
.basic .t,
.basic .b,
.basic .b div {
  background:transparent url(/images/boxes/basic-round.png) no-repeat top right;
}

.light .content,
.light .t,
.light .b,
.light .b div {
  background:transparent url(<%= style_image_path("gradient_shadow_light_head") || "/images/boxes/gradient-shadow-lighthead.png" -%>) no-repeat top right;
}

.interior .content,
.interior .t,
.interior .b,
.interior .b div {
  background:transparent url(/images/boxes/interior-250h.png) no-repeat top right;
}

.basicborder .content,
.basicborder .t,
.basicborder .b,
.basicborder .b div {
  background:transparent url(/images/boxes/basic-round-border.png) no-repeat top right;
}

.error .content, .warning .content,
.error .t, .warning .t,
.error .b, .warning .b,
.error .b div, .warning .b div {
  background:transparent url(/images/boxes/basic-round-red-border.png) no-repeat top right;
}
.notice .content, .message .content,
.notice .t, .message .t,
.notice .b, .message .b,
.notice .b div, .message .b div {
  background:transparent url(/images/boxes/basic-round-green-border.png) no-repeat top right;
}

.basicborder .content {
	padding-top:10px;
}

.interior {
  margin-bottom:0px;
}

.box .content {
  position:relative;
  zoom:1;
  _overflow-y:hidden;
  padding:0px 15px 0px 0px;
}

.light .content {
    min-height:225px;
}

.box .t {
  /* top+left vertical slice */
  position:absolute;
  left:0px;
  top:0px;
  width:15px; /* top slice width */
  margin-left:-15px;
  height:100%;
  _height:1600px; /* arbitrary long height, IE 6 */
  background-position:top left;
}

.box .b {
  /* bottom */
  position:relative;
  width:100%;
}

.box .b,
.box .b div {
  height:15px; /* height of bottom cap/shade */
  font-size:1px;
}

.box .b {
  background-position:bottom right;
}

.box .b div {
  position:relative;
  width:15px; /* bottom corner width */
  margin-left:-15px;
  background-position:bottom left;
}

.box .hd,
.box .bd,
.box .ft {
  position:relative;
}

.box .wrapper {
  /* extra content protector - preventing vertical overflow (past background) */
  position:static;
  max-height:1000px;
  overflow:auto; /* note that overflow:auto causes a rather annoying redraw "lag" in Firefox 2, and may degrade performance. Might be worth trying without if you aren't worried about height/overflow issues. */
}

.box h1,
.box h2,
.box p {
  margin:0px; /* margins will blow out backgrounds, leaving whitespace. */
  padding:0px;
}

.box h1 {
    height:30px;
    font-size:1em;
    padding-bottom:10px;
}

.shadow h1, .default h1 {
  color:#fff;
  text-transform:lowercase;
}

.shadow h1 img, .default h1 img {
	padding-top:5px;	
}
.box h1 img {
	padding-top:5px;
}

.box.shadow h1 a, .box.default h1 a, .box.shadow h1 a:visited, .box.default h1 a:visited {
  color:#fff;
}
.box.basicborder h1, .box.basicborder h1 a, .box.basicborder h1 a:visited {
  color:#000;
}
.box.basicborder h1 a:hover {
  color:#808080;
}
.box.basicborder .b,
.box.basicborder .b div {
  height:15px; /* height of bottom cap/shade */
  font-size:1px;
}
.box.basicborder .content, .box.interior .content {
	/*padding-top:15px;*/
}

.box.interior h1 {
  display:none;
}
.basicborder h1, .basic h1 {
  padding-bottom:0;
  padding-top:5px;
  height:20px;
}
.basicborder h3 {
	margin-top:10px;
}
.basic h1 {
	padding-bottom:0;
}
