<h1>Share Badge (3.1.1.3) </h1>
<div class="oi1">
  <div id="preview">
    <% content_box( "your charity badge", :class => "shadow" ) do -%>
      <div id="badge">
        <%= render :partial => "shared/current_view", :locals => {:my_badge => @my_badge } -%>
      </div>
        <%= link_to 'home', :controller => 'site', :action => 'index' -%>
    <% end %>
  </div>
  <div id="howto">
    <% content_box( "how to share your badge", :class => "basic" ) do -%>
      <p>Share your badge by clicking....
      </p>
    <% end %>
  </div>
  <div id="networks">
    <%= render :partial => "webapps", :locals => {:my_badge => @my_badge, :shares => @shares  }  -%> 
  </div>
  <div id="toolbar">
    <% content_box( "web applications", :class => "light" ) do -%>
      <div id="share-options">
      </div>
    <% end %>
  </div>
</div>
