<table id="badge-list">
  <% badges.each do |badge| %>
    <%= cycle('<tr>', nil, nil, :name => 'start') %>
    <td><%= badge_link(badge, { :size => size } ) %></td>
    <%= badges.last === badge ? extra_cells(3, badges.size) : nil %>
    <%= cycle(nil, nil, '</tr>', :name => 'end') %>
  <% end %>
</table>