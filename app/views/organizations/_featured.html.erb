<% Organization.find(:all, :conditions => 'featured = 1 ' ,  :order => 'RAND()', :limit => 1).each do |organization|  %>


	<h1><%= link_to organization.name,  organization_path(organization) -%></h1>
	<%= link_to (image_tag organization.organizationslogo.public_filename(:medium), :class => 'avatar'), organization_path(organization) -%>
	<p><%= organization.statement -%></p>
	<span class="clear"></span>
	<% end %>

