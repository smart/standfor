<% content_box("Participating Organizations", :class => "shadow", :id => "organizations" ) do -%>

<ul>
<% @organizations.each do |organization|%>
<li>
<%= link_to organization.name, :controller => 'organizations', :action => 'show', :organization => organization.site_name  %>
</li>

<% end  %>

</ul>
<% end %>

<style>
#test {
	border:1px solid black;
}
#test button {
	border:1px solid green;
	height:1%;
}
#test button span {
	border:1px solid red;
}
#test button img {
	border:1px solid blue;
}

</style>

<div id="test">
<button value="submit" class="submitBtn"><span><%= image_tag "labels/donate.png" -%></span></button>
</div>

<% form_for :donation do |f| %>
  <% content_box( "Make a Donation", :class => "shadow", :id => "donation" ) do -%>
    <% content_box( "", :class => "basicborder", :id => "amount" ) do -%>
      <dl>
        <dt><label for="amount" >Amount:</label></dt>
        	<dd><%= f.text_field :amount -%></dd>
      </dl>
    <% end %>
    <% content_box( (image_tag "labels/privacy.png", :alt => "Privacy" ), :class => "basicborder", :id => "privacy" ) do -%>
      <dl>
      	<dt>Privacy</dt>
        	<dd>Privacy option one.</dd>
        	<dd>Privacy option two.</dd>
      </dl>
    <% end %>
    <% content_box( (image_tag "labels/preferences.png", :alt => "Preferences" ), :class => "basicborder", :id => "preferences" ) do -%>
      <p>
        Donation preferences go here. Fieldsets in form_for?
      </p>
    <% end %>
    
    <% content_box( (image_tag "labels/optional.png", :alt => "Optional" ), :class => "basicborder", :id => "optional" ) do -%>
      <p>
        Segment:<strong></strong>
      </p>
      <p>
        Dedication:
      </p>
    <% end %>
    <% content_box( "Donate!", :class => "basicborder", :id => "donate" ) do -%>
    	<button type="submit" value="submit" class="submitBtn"><span><%= image_tag "labels/donate.png" -%></span></button>
      
    <% end %>
    <span class="clear"></span>
  <% end %>
<% end %>
