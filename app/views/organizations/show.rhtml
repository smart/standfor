<% content_box(@organization.name, :class => 'shadow', :id => 'preview') do -%>
	<% if !@organization.organizationslogo.nil? %>
	<%= image_tag(@organization.organizationslogo.public_filename(:medium), :alt => @organization.name, :class => 'avatar') -%>
	<% else %>
	<%= image_tag('missing_avatar.jpg') %>
	<% end %>		
		<p>
			<%= @organization.description %>
		</p>
		<% if current_account != :false %>
			<% if current_account.is_sponsor? %>
				<p><%= link_to 'Sponsor', :controller=> 'sponsorships', :action => 'new', :sponsorable_type => 'Organization', :sponsorable_id => @organization.id -%> </p>
		  <% else %>
				<p><%= link_to 'Become A Sponsor',  new_organization_sponsor_path(@organization) -%></p>
			<% end %>
		<% end %>
<% end %>



<% content_box("our causes", :class => 'basicborder', :id => 'instructions') do %>
  <%= render :partial => 'navigation', :locals => { :organization => @organization } %>
<% end %>

<% content_box("contact #{@organization.name}", :class => 'basicborder', :id => 'org-contact') do %>
	<%= render :partial => 'details', :locals => { :organization => @organization } %>
<% end %>
