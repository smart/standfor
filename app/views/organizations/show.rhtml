<% grey_fade(:id => "organization-badges" ) do -%>
	<h2><%= @organization.name -%> Badges</h2>
	<div id="badge-list">
		<% @organization.featured_badges.each do |badge| %>
			<%= badge_link(badge, :size => 'small' ) -%>
		<% end %>
  </div>
	<span class="clear"></span>
<% end %>
