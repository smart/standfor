<h1>requirements for <%= @badge.name -%></h1>

<table>
  <tr>
   <th>name</th>
   <th>value</th>
   <th>description</th>
   <th>type</th>
   <th>admin</th>
  </tr>

<% for requirement in @requirements %>
  <tr class="<%=cycle('odd', 'even' ) -%>">
    <td><%= link_to  requirement.name, edit_admin_badge_requirement_path(@badge , requirement) %></td>
    <td> <%= requirement.value -%>  </td>
    <td> <%= requirement.description -%>  </td>
    <td> <%= requirement.class.to_s -%>  </td>
    <td><%= link_to 'delete requirement', admin_badge_requirement_path(@badge, requirement ), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to "add a requirement for #{@badge.name}", new_admin_badge_requirement_path(@badge) %>
